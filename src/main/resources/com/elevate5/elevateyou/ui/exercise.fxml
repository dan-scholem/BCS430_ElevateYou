<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.elevate5.elevateyou.ui.ExerciseController"
            prefWidth="920" prefHeight="600"
            stylesheets="@../styles.css">

    <!-- Header -->
    <top>
        <VBox spacing="4">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>
            <Label text="Exercise Goals" styleClass="trackerlabel"/>
            <Label text="Choose a workout, set a goal, and update progress as you go."
                   styleClass="dashboardarea"/>
        </VBox>
    </top>

    <!-- Left: Workout choices -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <Label text="Workouts" styleClass="dashboardarea"/>

            <!-- Single column list of exercises -->
            <VBox spacing="12">

                <ToggleButton fx:id="runningBtn"
                              text="Running"
                              styleClass="exercisebutton"
                              maxWidth="Infinity"/>

                <ToggleButton fx:id="treadmillBtn"
                              text="Treadmill"
                              styleClass="exercisebutton"
                              maxWidth="Infinity"/>

                <ToggleButton fx:id="bicycleBtn"
                              text="Bicycle"
                              styleClass="exercisebutton"
                              maxWidth="Infinity"/>

                <ToggleButton fx:id="weightsBtn"
                              text="Weights"
                              styleClass="exercisebutton"
                              maxWidth="Infinity"/>

                <ToggleButton fx:id="swimmingBtn"
                              text="Swimming"
                              styleClass="exercisebutton"
                              maxWidth="Infinity"/>

                <ToggleButton fx:id="yogaBtn"
                              text="Yoga"
                              styleClass="exercisebutton"
                              maxWidth="Infinity"/>
            </VBox>

        </VBox>
    </left>

    <!-- Center: Goal details -->
    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <HBox spacing="10">
                <Label text="Selected:" styleClass="dashboardarea"/>
                <Label fx:id="selectedExerciseLabel" text="—" styleClass="dashboardarea"/>
            </HBox>

            <Label text="Goal Title" styleClass="dashboardarea"/>
            <TextField fx:id="goalTitleField"
                       promptText="e.g., Back day — 10 sets across variations"/>

            <Label text="Notes (optional)" styleClass="dashboardarea"/>
            <TextArea fx:id="goalNotesArea"
                      promptText="Add details (exercises, weights, etc.)"
                      prefRowCount="3"/>

            <HBox spacing="16" alignment="CENTER_LEFT">

                <VBox spacing="6">
                    <Label text="Target Sets" styleClass="dashboardarea"/>
                    <Spinner fx:id="targetSetsSpinner" editable="true" prefWidth="140"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Completed Sets" styleClass="dashboardarea"/>
                    <HBox spacing="6" alignment="CENTER_LEFT">
                        <Button text="-" onAction="#onDecCompleted" styleClass="addbutton"/>
                        <Spinner fx:id="completedSetsSpinner" editable="true" prefWidth="140"/>
                        <Button text="+" onAction="#onIncCompleted" styleClass="addbutton"/>
                    </HBox>
                </VBox>

                <VBox spacing="6" prefWidth="240">
                    <Label text="Progress" styleClass="dashboardarea"/>
                    <ProgressBar fx:id="progressBar" prefWidth="240"/>
                </VBox>

            </HBox>

            <!-- Buttons -->
            <HBox spacing="10">
                <Button text="Reset"
                        onAction="#onReset"
                        styleClass="clearbutton"/>

                <Button text="Save Goal / Progress"
                        onAction="#onSave"
                        styleClass="savebutton"/>

                <Button text="← Back to Dashboard"
                        onAction="#onBackToDashboard"
                        styleClass="logoutbutton"/>
            </HBox>

            <Label fx:id="statusLabel" text="" styleClass="dashboardarea"/>
        </VBox>
    </center>
</BorderPane>
