<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.elevate5.elevateyou.ui.ExerciseController">

    <top>
        <VBox alignment="CENTER" spacing="5.0">
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Exercise" />
                <Label text="Choose a workout and press Start" />
            </children>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15.0">

            <!-- Workout Options -->
            <GridPane fx:id="exerciseGrid" alignment="CENTER" hgap="15" vgap="15">
                <children>
                    <ToggleButton fx:id="treadmillBtn" onAction="#onChoice" text="Treadmill" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <ToggleButton fx:id="weightsBtn" onAction="#onChoice" text="Weights" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <ToggleButton fx:id="bicycleBtn" onAction="#onChoice" text="Bicycle" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ToggleButton fx:id="swimmingBtn" onAction="#onChoice" text="Swimming" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </children>
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <!-- Exercise Info -->
            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Label text="Selected:" />
                    <Label fx:id="selectedExerciseLabel" style="-fx-font-weight: bold;" text="â€”" />
                </children>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Label text="Duration:" />
                    <Label fx:id="timeLabel" text="00:00:00" />
                </children>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Label text="Calories:" />
                    <Label fx:id="caloriesLabel" text="0 kcal" />
                </children>
            </HBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15">
                <children>
                    <Button fx:id="startButton" onAction="#onStart" text="Start" />
                    <Button fx:id="stopButton" onAction="#onStop" text="Stop" />
                    <Button fx:id="resetButton" onAction="#onReset" text="Reset" />
                </children>
            </HBox>
         <Button fx:id="dashboardButton" onAction="#dashboardButtonClick" mnemonicParsing="false" text="Dashboard" />

        </VBox>
    </center>

</BorderPane>
