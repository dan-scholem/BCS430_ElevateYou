<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="920" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.elevate5.elevateyou.ui.ExerciseController">

    <!-- Header -->
    <top>
        <VBox spacing="4">
            <padding>
                <Insets bottom="16" left="16" right="16" top="16" />
            </padding>
            <Label styleClass="trackerlabel" text="Exercise Goals" />
            <Label styleClass="dashboardarea" text="Choose a workout, set a goal, and update progress as you go." />
        </VBox>
    </top>

    <!-- Left: Workout choices -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets bottom="16" left="16" right="16" top="16" />
            </padding>

            <Label styleClass="dashboardarea" text="Workouts" />

            <!-- Single column list of exercises -->
            <VBox spacing="12">

                <ToggleButton fx:id="runningBtn" maxWidth="Infinity" styleClass="exercisebutton" text="Running" />

                <ToggleButton fx:id="treadmillBtn" maxWidth="Infinity" styleClass="exercisebutton" text="Treadmill" />

                <ToggleButton fx:id="bicycleBtn" maxWidth="Infinity" styleClass="exercisebutton" text="Bicycle" />

                <ToggleButton fx:id="weightsBtn" maxWidth="Infinity" styleClass="exercisebutton" text="Weights" />

                <ToggleButton fx:id="swimmingBtn" maxWidth="Infinity" styleClass="exercisebutton" text="Swimming" />

                <ToggleButton fx:id="yogaBtn" maxWidth="Infinity" styleClass="exercisebutton" text="Yoga" />
            </VBox>

        </VBox>
    </left>

    <!-- Center: Goal details -->
    <center>
        <VBox spacing="12">
            <padding>
                <Insets bottom="16" left="16" right="16" top="16" />
            </padding>

            <HBox spacing="10">
                <Label styleClass="dashboardarea" text="Selected:" />
                <Label fx:id="selectedExerciseLabel" styleClass="dashboardarea" text="—" />
            </HBox>

            <Label styleClass="dashboardarea" text="Goal Title" />
            <TextField fx:id="goalTitleField" promptText="e.g., Back day — 10 sets across variations" />

            <Label styleClass="dashboardarea" text="Notes (optional)" />
            <TextArea fx:id="goalNotesArea" prefRowCount="3" promptText="Add details (exercises, weights, etc.)" />

            <HBox alignment="CENTER_LEFT" spacing="16">

                <VBox spacing="6">
                    <Label styleClass="dashboardarea" text="Target Sets" />
                    <Spinner fx:id="targetSetsSpinner" editable="true" prefWidth="140" />
                </VBox>

                <VBox spacing="6">
                    <Label styleClass="dashboardarea" text="Completed Sets" />
                    <HBox alignment="CENTER_LEFT" spacing="6">
                        <Button onAction="#onDecCompleted" styleClass="addbutton" text="-" />
                        <Spinner fx:id="completedSetsSpinner" editable="true" prefWidth="140" />
                        <Button onAction="#onIncCompleted" styleClass="addbutton" text="+" />
                    </HBox>
                </VBox>

                <VBox prefWidth="240" spacing="6">
                    <Label styleClass="dashboardarea" text="Progress" />
                    <ProgressBar fx:id="progressBar" prefWidth="240" />
                </VBox>

            </HBox>

            <!-- Buttons -->
            <HBox spacing="10">
                <Button onAction="#onReset" styleClass="clearbutton" text="Reset" />

                <Button onAction="#onSave" styleClass="savebutton" text="Save Goal / Progress" />
            </HBox>

            <Label fx:id="statusLabel" styleClass="dashboardarea" text="" />
        </VBox>
    </center>
</BorderPane>
