<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.elevate5.elevateyou.CaloriesWaterIntakeController">

    <center>
        <VBox spacing="14" style="-fx-padding: 16;">
            <Label text="Calories Water Intake"
                   style="-fx-font-size:18px;-fx-font-weight:bold;"/>

            <!-- ===== Calories input (NO DROPDOWN) ===== -->
            <TitledPane text="Add Calories" expanded="true">
                <VBox spacing="8" style="-fx-padding:10;">
                    <HBox spacing="10">
                        <Label text="Date:"/>
                        <DatePicker fx:id="calDate"/>

                        <Label text="Food:"/>
                        <TextField fx:id="foodText" promptText="type food name..."/>

                        <Label text="Calories:"/>
                        <TextField fx:id="caloriesText" promptText="e.g. 220"/>

                        <Button text="Add" onAction="#addCalories"/>
                    </HBox>
                    <Label text="Tip: start typing 'chicken', 'rice', 'steak'..."/>
                </VBox>
            </TitledPane>

            <!-- Calories log + analysis -->
            <TitledPane text="Calories Log Analysis" expanded="true">
                <VBox spacing="10" style="-fx-padding:10;">
                    <TableView fx:id="caloriesTable" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="colCalDate" text="Date" prefWidth="140"/>
                            <TableColumn fx:id="colFood" text="Food" prefWidth="260"/>
                            <TableColumn fx:id="colCals" text="Calories" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Total for selected date:"/>
                        <Label fx:id="lblCalTotal" text="0"/>
                    </HBox>

                    <Label text="Calories per day (bar chart)"/>
                    <BarChart fx:id="caloriesChart" prefHeight="240">
                        <xAxis><CategoryAxis label="Date"/></xAxis>
                        <yAxis><NumberAxis label="Calories"/></yAxis>
                    </BarChart>
                </VBox>
            </TitledPane>

            <!-- ===== Water ===== -->
            <TitledPane text="Water Intake" expanded="true">
                <VBox spacing="10" style="-fx-padding:10;">
                    <HBox spacing="10">
                        <Label text="Date:"/>
                        <DatePicker fx:id="waterDate"/>

                        <Label text="Ounces:"/>
                        <TextField fx:id="waterOunces" promptText="e.g. 16"/>

                        <Button text="Add" onAction="#addWater"/>
                    </HBox>

                    <TableView fx:id="waterTable" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="colWaterDate" text="Date" prefWidth="140"/>
                            <TableColumn fx:id="colOunces" text="Ounces" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Total water (selected date):"/>
                        <Label fx:id="lblWaterTotal" text="0"/>
                    </HBox>
                </VBox>
            </TitledPane>

            <!-- ===== Simple nutrition recommendations ===== -->
            <TitledPane text="Nutrition Tips" expanded="true">
                <VBox spacing="6" style="-fx-padding:10;">
                    <Label fx:id="lblAdvice" wrapText="true"
                           text="Add some entries to see tips."/>
                </VBox>
            </TitledPane>
        </VBox>
    </center>
</BorderPane>
